{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": "./src"
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts"]
}